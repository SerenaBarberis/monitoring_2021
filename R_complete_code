plot (EN01, col=cl)
plot (EN02, col=cl)
plot (EN03, col=cl)
plot (EN04, col=cl)
plot (EN05, col=cl)
plot (EN06, col=cl)
plot (EN07, col=cl)
plot (EN08, col=cl)
plot (EN09, col=cl)
plot (EN10, col=cl)
plot (EN11, col=cl)
plot (EN12, col=cl)
